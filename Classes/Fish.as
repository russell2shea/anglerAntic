package {	import flash.display.MovieClip;	public class Fish extends MovieClip 	{		public var xSpeed:Number;	//pixels moved to the right per tick		public var ySpeed:Number;	//pixels moved downwards per tick				public function Enemy( startX:Number, startY:Number ) 		{			x = startX;			y = startY;						xSpeed = 0;			ySpeed = -3;			var stageRef:Stage;		var speed:Number = 6;		}				public function Hero(stageRef:Stage) : void		{			x = stageRef.stageWidth/2;			y = stageRef.stageHeight/2;						this.stageRef = stageRef;						addEventListener(Event.ENTER_FRAME, loop, false, 0, true);					}				private function loop(e:Event) : void		{						var yDistance:Number = stageRef.mouseY - y;			var xDistance:Number = stageRef.mouseX - x;			var radian:Number = Math.atan2(yDistance, xDistance);			rotation = radian * 180 / Math.PI;							x -= (x - stageRef.mouseX) / speed;				y -= (y - stageRef.mouseY) / speed;					}						public function moveABit():void 		{			x = x + xSpeed;			y = y + ySpeed;		}	}}