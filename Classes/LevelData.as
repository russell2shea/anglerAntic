package{	public class LevelData	{		public var backgroundImage:String;		public var pointsToReachNextLevel:Number;		public var enemySpawnRate:Number;		public var jellySpawnRate:Number;		public var levelNum:Number;				public function LevelData( levelNumber:Number )		{			levelNum = levelNumber;			if ( levelNumber == 1 )			{				backgroundImage = "blue";				pointsToReachNextLevel = 50;				enemySpawnRate = 0.02;				jellySpawnRate = 0.00;			}			else if ( levelNumber == 2 )			{				backgroundImage = "red";				pointsToReachNextLevel = 100;				enemySpawnRate = 0.02;				jellySpawnRate = 0.01;			}			else if ( levelNumber == 3 )			{				backgroundImage = "red";				pointsToReachNextLevel = 200;				enemySpawnRate = 0.03;				jellySpawnRate = 0.02;			}			else if ( levelNumber == 4 )			{				backgroundImage = "red";				pointsToReachNextLevel = 300;				enemySpawnRate = 0.03;				jellySpawnRate = 0.03;			}			else if ( levelNumber == 5 )			{				backgroundImage = "red";				pointsToReachNextLevel = 500;				enemySpawnRate = 0.03;				jellySpawnRate = 0.035;			}			else if ( levelNumber == 6 )			{				backgroundImage = "red";				pointsToReachNextLevel = 600;				enemySpawnRate = 0.03;				jellySpawnRate = 0.04;			}						else if ( levelNumber == 7 )			{				backgroundImage = "red";				pointsToReachNextLevel = 700;				enemySpawnRate = 0.03;				jellySpawnRate = 0.045;			}						else if ( levelNumber == 8 )			{				backgroundImage = "red";				pointsToReachNextLevel = 800;				enemySpawnRate = 0.02;				jellySpawnRate = 0.05;			}			else if ( levelNumber == 9 )			{				backgroundImage = "red";				pointsToReachNextLevel = 900;				enemySpawnRate = 0.02;				jellySpawnRate = 0.06;			}			else if ( levelNumber == 10 )			{				backgroundImage = "red";				pointsToReachNextLevel = 1000;				enemySpawnRate = 0.02;				jellySpawnRate = 0.07;			}			else if ( levelNumber == 11 )			{				backgroundImage = "red";				pointsToReachNextLevel = 1100;				enemySpawnRate = 0.01;				jellySpawnRate = 0.075;			}			else if (levelNumber == 12)			{				backgroundImage = "red";				pointsToReachNextLevel = 1200;				enemySpawnRate = 0.01;				jellySpawnRate = 0.1;			}												else			{				if ( levelNumber % 2 == 1 )				{					backgroundImage = "blue";				}				else				{					backgroundImage = "red";				}				pointsToReachNextLevel = levelNumber * 200;				enemySpawnRate = 0.05 - ( 2 / levelNumber );				jellySpawnRate =0.1 - (1 / levelNumber );			} 		}	}}